{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "types": ["node"],
    "rootDir": "src",
    "outDir": "./lib",
    "lib": ["esnext"],
    "declaration": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "preserveConstEnums": true,
    "esModuleInterop": false,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
